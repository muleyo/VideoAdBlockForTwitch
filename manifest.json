{
  "description": "Swaps video ads for an ad-free stream.",
  "manifest_version": 3,
  "name": "Video Ad-Block, for Twitch",
  "version": "5.3.5",
  "icons": {
    "48": "icons/ttv-48.png",
    "96": "icons/ttv-96.png"
  },
  "action": {
    "default_icon": "icons/ttv-32.png",
    "default_title": "Video Ad-Block, for Twitch",
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "popup/index.html"
  },
  "permissions": ["declarativeNetRequest", "storage", "scripting"],
  "host_permissions": ["https://*.twitch.tv/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "block_rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["remove_video_ads.js"],
    "matches": ["https://*.twitch.tv/*"]
  }]
}